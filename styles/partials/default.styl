* {
    box-sizing: border-box;
    cursor: url(../images/cursor.svg) 18 18, auto;
}

*:focus {
    outline: none !important;
}

canvas {
    display: block;
}

html, body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
    overscroll-behavior-y: contain;
}

body {
    font-family: $fontS;
    font-weight: 300;
    color: $c1;
    font-size: 19px;
    line-height: 1.6;
    letter-spacing: 0.15em;
    background-color: #000; 
    overflow: hidden;
    overflow-y: auto;
    text-rendering: optimizeLegibility; 
    -webkit-font-smoothing: antialiased;
    -ms-overflow-style: none; 

    &.is-overflow {
        overflow: hidden;
    }

    &.is-fake-scroll {
        &::after {
            content: '';
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow-y: scroll;
            z-index: 8;
        }
    }
}

ul,ol {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
}

h1, h2, h3, h4 {
    font-family: $fontS;
    font-weight: 300;
    line-height: 1;
    text-transform: uppercase;
    margin: 0;
}

h1, h2 {
    font-family: $fontD;
    font-weight: 500;
    font-size: 80px;
    line-height: 1.25;
    letter-spacing: 0;
}

h3 {
    font-family: $fontS;
    font-size: 30px;
    letter-spacing: 0.3em;
}

h4 {
    font-family: $fontS;
    font-size: 19px;
    line-height: 1.6;
    letter-spacing: 0.15em;
}

input {
    font-family: $fontS;
    font-size: 15px;
    line-height: 30px;
    border: none;
    padding: 9px 33px;
    background-color: transparent;
    color: $c1;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    placeholder($c1);
}

button {
    font-family: $fontS;
    background-color: transparent;
    padding: 0;
    border: none;
    cursor: url(../images/cursor-hover.svg) 18 18, auto;
    -webkit-appearance: none;

    > * {
        pointer-events: none;
    }
}

img {
    max-width: 100%;
}

svg {
    fill: currentColor;
}

a {
    text-decoration: none;
    cursor: url(../images/cursor-hover.svg) 18 18, auto;

    > * {
        pointer-events: none;
    }
}

@media $normal {
    h1, h2 {
        font-size: 80px;
    }
}

@media $medium {
    h1, h2 {
        font-size: 70px;
    }

    h3 {
        font-size: 24px;
    }
}

@media $small {
    body {
        font-size: 11px;
    }

    h1, h2 {
        font-size: 60px;
        line-height: .93;
    }

    h3 {
        font-size: 25px;
        line-height: 1.2;
    }

    h4 {
        font-size: 11px;
    }
}

@media $xsmall {
    body {
        font-size: 11px;
    }

    h1, h2 {
        font-size: 32px;
        line-height: 1.03;
    }

    h3 {
        font-size: 15px;
    }

    input {
        font-size: 13px;
    }
}

@media $xxsmall {
    h1, h2 {
        font-size: 28px;
    }
}