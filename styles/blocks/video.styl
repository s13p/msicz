.video {
	display: block;
	width: 100%;
	height: auto;

	&__box {
		width: 100%;
		position: relative;
		padding-bottom: 56.25%;

		video, 
		iframe {
			display: block;
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
		}
	}

	&__caption {
		margin-top: 34px;
		font-size: 25px;
		line-height: 40px;
		text-align: center;
		letter-spacing: 1.2em;
	}
}

@media $small {
	.video {
		&__caption {
			font-size: 20px;
			line-height: 20px;
			margin: 26px 0 0;
		}
	}
}

@media $xsmall {
	.video {
		&__caption {
			font-size: 14px;
			line-height: 22px;
			margin: 16px 0 0;
		}
	}
}