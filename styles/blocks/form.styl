.form {
    text-align: center;

    &__title {
        font-size: 35px;
        line-height: 1.3;
        font-weight: 100;
        letter-spacing: 0.2em;
        text-align: center;
        text-transform: uppercase;
        margin: 0 0 34px;
    }

    &__row {
        display: flex;
        justify-content: center;
    }

    &__field {
        position: relative;
        z-index: 1;
        height: 48px;

        .svg-icon {
            &--border {
                fill: none;
                position: absolute;
                top: 0;
                left: 0;

                path {
                    stroke: url(#gradient5)
                }
            }
        }

        &--control {
            width: auto;
            margin-left: 16px;
            height: auto;

            &::before {
                display: none;
            }
        }
    }

    &__input {
        border: none;
        width: 100%;
        position: relative;
        z-index: 2;
    }

    &__message {
        text-align: left;
        font-size: 12px;
        position: absolute;
        top: 100%;
        margin-top: 5px;   

        p {
            margin: 0;
        }
    }

    &__button {
        border-radius: 30px;

        .svg-icon {
            margin-left: 10px;

            &:only-child {
                margin: 0;
            }
        }
    }

    &--footer {
        .form {
            &__field {
                width: 292px;
                height: 48px;
            }

            &__button {
                border-radius: 30px 30px 30px 0;
            }
        }
    }

    &--ims {
        text-transform: none;
        
        .form {
            &__title {
                font-size: 22px;
                line-height: 1.36;
                letter-spacing: 0.15em;
                text-transform: uppercase;
                text-align: center;
                margin: 0 0 10px;
            }

            &__field {
                width: 100%;
                height: auto;
                margin: 0 0 9px;
                position: relative;

                &--bd {
                    &::before {
                        content: '';
                        display: block;
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 456px;
                        height: 48px;
                        background: linear-gradient(90deg, #7647FE 0%, #FF66CB 100%);
                        clip-path: path('M454.5,1.5V18c0,15.7-12.8,28.5-28.5,28.5H1.5V30C1.5,14.3,14.3,1.5,30,1.5H454.5 M456,0H30 C13.4,0,0,13.4,0,30v18h426c16.6,0,30-13.4,30-30V0L456,0z'); 
                    }
                }

                &--password {
                    .form {
                        &__field-control {
                            position: absolute;
                            top: 24px;
                            right: 33px;
                            width: 40px;
                            height: 5px;
                            line-height: 0;
                            overflow: hidden;
                            z-index: 3;

                            .svg-icon {
                                fill: transparent;
                                stroke: $c1;
                                transform: translateY(-50%);
                            }
                        }
                    }

                    &.is-pass-visible {
                        .form {
                            &__field-control {
                                height: 10px;
                                top: 19px;

                                .svg-icon {
                                    transform: translateY(0);
                                    fill: url(#gradient4)
                                }
                            }
                        }
                    }
                }

                &--control {
                    display: flex;
                    flex-flow: column nowrap;
                    align-items: flex-end;
                    margin: 0;
                }
            }

            &__message {
                position: static;
            }

            &__button {
                margin-bottom: 9px;
                padding: 9px 33px;

                &:last-child {
                    margin-bottom: 0;
                }
            }
        }
    }

    &--ims-row {
        width: 100%;

        .form {
            &__field {
                margin: 0;
                width: 456px;
                flex-shrink: 0;

                position: relative;

                &--bd {
                    &::before {
                        content: '';
                        display: block;
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 456px;
                        height: 48px;
                        background: linear-gradient(90deg, #7647FE 0%, #FF66CB 100%);
                        clip-path: path('M454.5,1.5V18c0,15.7-12.8,28.5-28.5,28.5H1.5V30C1.5,14.3,14.3,1.5,30,1.5H454.5 M456,0H30 C13.4,0,0,13.4,0,30v18h426c16.6,0,30-13.4,30-30V0L456,0z'); 
                    }
                }

                &--control {
                    flex-grow: 1;
                    width: auto;
                    display: flex;
                    flex-flow: column nowrap;
                    align-items: flex-end;
                    margin-left: 9px;
                }
            }

            &__button {
                width: 100%;
                justify-content: center;
                padding: 9px 33px;
            }
        }
    }
}


@media $large {
    .form {
        &--footer {
            .form {
                &__field {
                    &--control {
                        width: auto;
                    }
                }
            }
        }
    }
}

@media $normal {
    .form {
        &--footer {
            .form {
                &__title {
                    font-size: 30px;
                }

                &__row {
                    width: 292px;
                    margin: 0 auto;
                    flex-flow: column nowrap;
                    position: relative;
                }

                &__field {
                    width: auto;

                    &--control {
                        margin-left: 0;
                        position: absolute;
                        right: 0;
                        bottom: 0;
                    }
                }

                &__input {
                    width: 100%;
                    padding-right: 100px;
                }

                &__button {
                    border-radius: 30px 0 30px 0;
                }
            }
        }
    }
}

@media $medium {
    .form {
        &--footer {
            .form {
                &__title {
                    font-size: 20px;
                }
            }
        }

        &--ims-row {
            .form {
                &__row {
                    flex-flow: column nowrap;
                }

                &__field {
                    width: 456px;
                    flex-shrink: 0;
                    margin: 0 0 9px;

                    &--control {
                        margin-left: 0;
                    }
                }

                &__button {
                    width: auto;
                }
            }
        }
    }
}

@media $small {
    .form {
        &--footer {
            .form {
                &__title {
                    font-size: 14px;
                    line-height: 23px;
                    text-transform: none;
                    margin: 0 0 23px;
                }

                &__row {
                    flex-flow: column nowrap;
                    position: relative;
                }

                &__field {
                    border-radius: 30px 30px 30px 0;

                    &::before {
                        border-radius: 30px 30px 30px 0;                            
                    }

                    &--control {
                        margin-left: 0;
                        position: absolute;
                        right: 0;
                        bottom: 0;
                    }
                }

                &__input {
                    padding-right: 100px;
                    width: 100%;
                }

                &__button {
                    border-radius: 30px 0 30px 0;
                }
            }
        }

        &--ims {
            .form {
                &__title {
                    font-size: 19px;
                }
            }
        }
    }
}

