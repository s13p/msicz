                    line-height: 23px;
                    max-width: 260px;
                    margin: 0 auto 23px;
                    text-transform: none;
                }

                &__row {
                    position: relative;
                    justify-content: flex-start;
                }

                &__field {
                    &:first-child {
                        .form__input {
                            padding-right: 100px;
                        }
                    }

                    &--control {
                        margin-left: 0;
