.intro {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 3;

	display: flex;
	align-items: center;
	justify-content: center;

	visibility: visible;
	opacity: 1;
	background-color: #000;

	&__controls {
		position: relative;
		visibility: hidden;
		opacity: 0;
		
		&::before {
			content: '';
			display: block;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: 258px;
			height: 258px;
			border-radius: 50%;
			background: alpha(#4C4C53, .9);
			filter: blur(100px);
		}
	}

	&__button {
		pointer-events: none;
	}

	&__link {
		display: inline-block;
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		margin-top: 30px;
		font-size: 12px;
		font-weight: 300;
		line-height: 1.2;
		letter-spacing: 0.3em;
		color: #818181;
		text-transform: uppercase;
		padding: 5px 0;
		border-bottom: 1px solid currentColor;
		white-space: nowrap;
		opacity: 0;
		visibility: hidden;
		transition: color $duration, opacity $duration;
	}

	&__video {
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		z-index: 4;
		display: flex;
		align-items: center;
		justify-content: center;
		display: none;
		

		video {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		&.is-active {
			display: block;
		}
	}

	&.is-hidden {
		display: flex;
		visibility: hidden;
		opacity: 0;
	}
}

@media $desktop {
	.intro {
		transition: opacity .3s ease;
		
		&__video {
			transition: visibility 0s .3s ease, opacity .3s ease;
		}

		&__link {
			&:hover {
				color: $c1;
			}
		}
	}
}

@media $xsmall {
	.intro {
		&__button {
			width: 270px;
			font-size: 14px;
		}

		&__link {
			font-size: 10px;
		}
	}
}