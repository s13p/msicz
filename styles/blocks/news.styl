.news-card {
	display: block;
	color: $c8;
	margin-right: 12%;
	transform: translateY(100px);
	opacity: 0;
	transition: opacity $duration, transform $duration, color $duration;
	transition-delay: calc((var(--slide-index) * 0.2s) + 1s);

	&__box {
		position: relative;
		padding-bottom: 51.5%;
		margin-bottom: 40px;
	}

	&__image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		line-height: 0;
		border: 1px solid transparent;
		transform: scale(.8);
		transform-origin: center;
		transition: transform $duration, border-radius $duration, border-color $duration;

		&::before,
		&::after {
			content: '';
			display: block;
			position: absolute;
			border: 1px solid transparent;
		    width: 0;
		    height: 0;
		}

		&::before {
			top: -1px;
			right: -1px;
			transition: border-radius $duration, border-color $duration;
		}

		&::after {
			bottom: -1px;
			left: -1px;
			transition: border-radius $duration, border-color $duration;
		}

		img {
			position: absolute;
		}
	}

	&__line {
		&--inner {
			content: '';
			display: block;
			position: absolute;
			width: 41.6%;
			height: 0;
			border-left: 1px solid $c8;
			transform: skewX(-39deg);
			transform-origin: 0 100%;
			bottom: 0;
			left: 18%;
			transition: border-color $duration, height $duration;
		}

		&--outer {
			content: '';
			display: block;
			position: absolute;
			width: 42%;
			height: 0;
			border-left: 1px solid $c8;
			transform: skewX(39.5deg);
			transform-origin: 100% 0;
			top: 0;
			left: 100%;
			pointer-events: none;
			transition: transform $duration;
		}
	}

	&__svg {
		line-height: 0;
		position: absolute;
		left: 0;
		top: 50%;
		width: 100%;
		height: auto;
		transform: translateY(-50%);
		transition: opacity $duration;

		&--open {
			opacity: 0;
		}
	}

	&__mask {
		transition: transform $duration;
	}

	&__main {
		.word {
            display: inline-block;
            transform: translateY(100%);
            opacity: 0;
            transition: opacity $duration, transform $duration;
            transition-delay: calc((var(--word-total) - var(--word-index)) * 0.1s);
        }
	}

	&__title {
		font-size: 22px;
		line-height: 30px;
		letter-spacing: 0.6em;
		margin: 0 0 16px;
	}

	&__text {
		font-size: 15px;
		line-height: 30px;
		letter-spacing: 0.15em;

		.word {
            transition-delay: calc((var(--word-total) - var(--word-index)) * 0.05s);
        }
	}
}

@media $desktop {
	.news-card {
		&:hover {
			color: $c1;

			.news-card {
				&__image {
					transform: scale(1,1);

					&::before,
					&::after {
						border-radius: 25%/50% 0px;
						transition: border-radius $duration, border-color $duration;
					}

					&::before {
						border-color: transparent $c1 $c1 transparent !important;
					}

					&::after {
						border-color: $c1 transparent transparent $c1 !important;
					}
				}

				&__line {
					&--inner {
						border-color: $c1;
					}
				}

				&__svg {
					&--default {
						opacity: 0;
					}

					&--open {
						opacity: 1;
					}
				}
			}
		}

		&.is-prev {
			.news-card {
				&__line {
					&--outer {
	   					transform: skewX(27.5deg) scale(1,1.13);
					}
				}
			}
		}

		&.is-current {
			.news-card {
				&__line {
					&--outer {
	   					transform: skewX(27.5deg) scale(1,.9);
					}
				}
			}
		}
	}
}

@media $small {
	.news-card {
		display: block;
		color: $c1;

		&__box {
			position: relative;
			padding-bottom: 51.5%;
			margin-bottom: 25px;
		}

		&__image {
			border: 1px solid $c1;
			transform: scale(.9);
		}

		&__line {
			&--inner {
				border-left: 1px solid $c1;
			}

			&--outer {
				border-left: 1px solid $c1;
			    transform: skewX(27.5deg);
			}
		}

		&__title {
			font-size: 16px;
			margin: 0 0 4px;
		}

		&__text {
			font-size: 14px;
			line-height: 23px;
		}
	}
}

@media $xsmall {
	.news-card {
		&__box {
			margin-bottom: 20px;
		}
		
		&__title {
			font-size: 18px;
			margin: 0 0 10px;
		}

		
	}
}