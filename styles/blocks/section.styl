                                width: 100%;
                                min-width: 0;

                                &--bottom {
                                    margin-left: 0;
                                    margin-top: 0;
                                    order: -1;
                                    flex-grow: 1;
                                    flex-flow: column nowrap;
                                    align-items: flex-start;

                                    .section {
                                        &__text {
                                            max-width: 238px;
                                            margin: auto 0 40px;
                                        }

                                        &__button {
                                            align-self: center;
                                        }
                                    }
                                }

                                &--top {
