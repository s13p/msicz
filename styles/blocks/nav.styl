.nav {
    &__list {
        display: flex;
        align-items: flex-start;
    }

    &__item {
        padding: 0 22px;

        &:nth-child(1) {
            .nav {
                &__link {
                    .word {
                        transition-delay: 0.2s; 
                    }
                }
            }
        }

        &:nth-child(2) {
            .nav {
                &__link {
                    .word {
                        transition-delay: 0.4s; 
                    }
                }

                &__icon {
                    transition-delay: 0.6s; 
                }
            }
        }

        &:nth-child(3) {
            .nav {
                &__link {
                    .word {
                        transition-delay: calc((var(--word-total) - var(--word-index)) * 0.1s);
                    }
                }
            }
        }

        &:nth-child(4) {
            .nav {
                &__link {
                    .word {
                        transition-delay: 0.6s; 
                    }
                }
            }
        }
    }

    &__link {
        display: block;
        font-size: 22px;
        font-weight: 400;
        line-height: 1;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: $c1;
        padding-bottom: 18px;
        position: relative;
        cursor: url(../images/cursor-hover.svg) 18 18, auto;

        > * {
            pointer-events: none;
        }

        &::after {
            content: '';
            display: block;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background-color: transparent;
            transition: background-color $duration;
        }

        &--icon {
            &::after {
                display: none;
            }

            .nav {
                &__icon {
                    line-height: 0;
                    position: absolute;
                    bottom: -5px;
                    left: 50%;
                    transform: translateX(-50%);
                    opacity: 1;
                    transition: opacity $duration;

                    &::before,
                    &::after {
                        content: '';
                        display: block;
                        position: absolute;
                        top: 50%;
                        width: 15px;
                        height: 6px;
                        margin-top: -3px;
                        background-color: transparent;
                        transition: background-color $duration;
                    }

                    &::before {
                        left: -18px;
                    }

                    &::after {
                        left: calc(100% + 3px);
                    }
                }
            }

            .svg-icon {
                &__eye,
                &__circle {
                    transition: fill $duration;
                }

                &__circle {
                    fill: $c2;
                }
            }
        }

        .word {
            display: inline-block;
            transform: translateY(0);
            opacity: 1;
            transition: opacity $duration, transform $duration;
            transition-delay: calc((var(--word-total) - var(--word-index)) * 0.3s);
        }
    }
}

@media $desktop {
    .nav {
        &__item {
            transition: opacity .3s;
            &:hover {
                opacity: 0.7;
            }
        }
    }
}

@media $medium {
    .nav {
        &__item {
            padding: 0 8px;
        }
    }
}

@media $small {
    .nav {
        margin: auto;

        &__list {
            flex-flow: column nowrap;
            align-items: center;
        }

        &__item {
            margin-bottom: 40px;

            &:last-child {
                margin-bottom: 0;
            }
        }

        &__link {
            font-size: 20px;
            padding-bottom: 10px;

            &::after {
                height: 4px;
            }

            &--icon {
                &::after {
                    display: none;
                }

                .nav {
                    &__icon {
                        .svg-icon {
                            width: 40px !important;
                            height: auto !important;
                        }

                        &::before,
                        &::after {
                            width: 20px;
                            height: 4px;
                            margin-top: -2px;
                        }

                        &::before {
                            left: -23px;
                        }
                    }
                }
            }
        }
    }
}
