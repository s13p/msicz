.wrapper {
    display: flex;
    flex-flow: column nowrap;
    width: 100%;
    min-height: 100%;
    overflow: hidden;
    position: relative;
    z-index: 2;
}

.is-debug {
    .wrapper * {
        // display: none;
        pointer-events: none !important;
    }

    .nav__item {
        a {
            pointer-events: auto !important;
        }
    }
}

.main {
	verticalStretch()
}

.canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.nowrap {
    display: inline-block;
    vertical-align: top;
    white-space: nowrap;
}

.sound {
    position: fixed;
    bottom: 40px;
    right: 35px;
    z-index: 12;
    color: $c1;
    width: 81px;
    height: auto;
    line-height: 0;
    box-sizing: content-box;

    &::before,
    &::after {
        content: '';
        display: block;
        position: absolute;
        width: 2px;
        height: 22px;
        background-color: $c1;
        right: 21px;
        top: 50%;
        margin-top: -11px;
        opacity: 0;
    }

    &::before {
        transform: rotate(-45deg);
    }

    &::after {
        transform: rotate(45deg);
    }

    &__icon {
        width: 100%;
        height: auto;

        &-waves {
            fill: $c7;
            opacity: 0;
            animation: waves 2s linear infinite;

            &:nth-child(2) {
                animation-delay: .5s;
            }

            &:nth-child(3) {
                animation-delay: 1s;
            }
        }

        g {
            opacity: 1;
            transition: opacity $duration;    
        }
    }

    &.is-muted {
        &::before,
        &::after {
            opacity: 1;
            transition: opacity $duration, transform $duration;
        }

        &::before {
            transform: translateX(8px) rotate(-45deg);
        }

        &::after {
            transform: translateX(8px) rotate(45deg);
        }

        .sound {
            &__icon {
                g {
                    opacity: 0;
                }
            }
        }
    }
}

.is-hidden {
	display: none;
}

.svg-icon {
    fill: currentColor;
}

@media $small {
    .sound {
        width: 53px;
        bottom: 32px;
        right: 20px;

        &::before,
        &::after {
            height: 16px;
            margin-top: -8px;
        }

        &.is-muted {
            &::before {
                transform: translateX(12px) rotate(-45deg);
            }

            &::after {
                transform: translateX(12px) rotate(45deg);
            }
        }
    }
}

.lil-gui-materials {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 10;
    // overflow-y: auto;
}

.lil-gui.root {
    --width: 350px;
    height: 100%;
}

.copy-settings {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 11;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    display: none;
    background-color: #fff;

    &__close {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 26px;
        height: 26px;
        cursor: pointer;
        background-color: #000;
        border-radius: 3px;

        &::before,
        &::after {
            position: absolute;
            top: 12px;
            left: 5px;
            width: 16px;
            height: 2px;
            background-color: #fff;
            transition: background-color .3s ease;
            content: '';
        }

        &::before {
            transform: rotate(45deg);
        }

        &::after {
            transform: rotate(-45deg);
        }

        &:hover::before,
        &:hover::after {
            background-color: #fff;
        }
    }

    &__content {
        font-family: Arial, sans-serif;
        font-size: 11px;
        padding: 20px;
        color: #000;
        overflow-y: auto;
        flex-grow: 1;
    }

    &.is-visible {
        display: flex;
    }
}