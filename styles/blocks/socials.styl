.socials {
    display: flex;

    &__link {
        width: 30px;
        height: 30px;
        margin-right: 18px;
        opacity: 1;
        transition: opacity $duration;

        .svg-icon {
            fill: url(#gradient5) $c7;
        }
    }
}

@media $desktop {
    .socials {
        &__link {
            &:hover {
                opacity: 0.5;
            }
        }
    }
}

@media $small {
    .socials {
        &__link {
            width: 25px;
            height: 25px;
            margin-right: 15px;

            .svg-icon {
                width: 100% !important;
                height: auto !important;
            }
        }
    }
}

@media $xsmall {
    .socials {
        justify-content: center;
        margin-bottom: 30px;

        &__link {
            width: 38px;
            height: 38px;
            margin: 0 11px;

            .svg-icon {
                width: 100% !important;
                height: auto !important;
            }
        }
    }
}