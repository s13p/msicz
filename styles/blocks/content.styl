.content {
    text-align: left;
    font-size: 23px;
    line-height: 1.74;

    &__title {
        display: inline-block;
        text-align: right;
        margin: 0 0 30px;
    }

    &__box {
        max-width: 1110px;
        margin: 0 auto;
    }

    &__head {
        margin-bottom: 86px;
    }

    &__subtitle {
        color: $c2;
        margin: 0 0 10px;
    }

    &__note {
        font-size: 17px;
        text-transform: uppercase;
        font-weight: 300;
        letter-spacing: 0.7em;
    }

    &__main {
        hr {
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, #CD2D9C 48.96%, #FAFF00 71.87%, #65FF6B 100%);
            margin: -.74em 0 1.74em;
            border: none;

            &:first-child {
                margin-top: 0;
            }
        }

        p {
            margin: 1.74em 0;
        }

        a {
            color: $c6;
        }

        ul {
            margin: 1.74em 0;


            li {
                position: relative;
                padding-left: 1.52em;

                &::before {
                    content: '';
                    display: block;
                    position: absolute;
                    left: .65em;
                    top: .74em;
                    width: .26em;
                    height: .26em;
                    border-radius: 50%;
                    background-color: currentColor;
                }
                
            }
        }

        .hr {
            padding-bottom: 1em;
            position: relative;

            &::after {
                content: '';
                display: block;
                position: absolute;
                width: 100%;
                height: 2px;
                left: 0;
                bottom: 0;
                background: linear-gradient(90deg, #CD2D9C 48.96%, #FAFF00 71.87%, #65FF6B 100%);
            }
        }

        .c2 {
            color: $c2;
        }

        .c3 {
            color: $c3;
        }
    }
}

@media $xsmall {
    .content  {
        font-size: 14px;

        &__title {
            margin: 0 0 20px;
            text-align: left;
        }

        &__head {
            margin: 0 0 50px;
        }

        &__note {
            font-size: 12px;
            letter-spacing: 0.5em;
        }

        &__main {
            h4 {
                font-size: 14px;
            }
        }
    }
}