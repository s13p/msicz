.textline {
    font-family: $fontD;
    display: flex;
    position: relative;
    width: 100vw;
    left: 50%;
    transform: translate(-50%, 100px);
    opacity: 0;
    transition: opacity $duration, transform $duration;
    transition-delay: 0s;

    &__track {
        display: flex;
        width: auto;
        flex-shrink: 0;
        white-space: nowrap;
        overflow: hidden;
        align-items: baseline;    
        animation: marquee 30s linear infinite;
    }

    &__item {
        font-size: 160px;
        line-height: 1;
        text-transform: uppercase;
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: $c1;
        color: transparent;

        &--active{
            -webkit-text-stroke-width: 0px;
            background: linear-gradient(268.74deg, #FF1879 4.37%, #8B57F9 31.6%, #91FFD1 61.36%, #FFF500 101.2%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    }

    &__icon {
        padding: 0 38px;
    }
}

@media $medium {
    .textline {
        &__item {
            font-size: 100px;
        }

        &__icon {
            padding: 0 30px;

            .svg-icon {
                height: 80px !important;
                width: auto !important;
            }
        }
    }
}

@media $small {
    .textline {
        &__item {
            font-size: 60px;
        }

        &__icon {
            padding: 0 20px;

            .svg-icon {
                height: 50px !important;
            }
        }
    }
}

@media $xsmall {
    .textline {
        &__item {
            font-size: 40px;
        }

        &__icon {
            padding: 0 12px;

            .svg-icon {
                height: 33px !important;
            }
        }
    }
}