.footer {
    width: 100%;
    padding: 40px 35px 70px;

    &__container {
        display: flex;
        justify-content: center;
        position: relative;
    }

    &__row {
        grid-row();

        &:last-child {
            margin-top: 40px;
        }
    }

    &__col {
        grid-col(3,12)

        &:nth-child(2) {
            grid-col(6,12);
            display: flex;
            flex-flow: column nowrap;
            align-items: center;
        }

        &:last-child {
            display: flex;
        }
    }

    &__logo {
        margin-top: auto;
        line-height: 0;

        .svg-icon {
            fill: url(#gradient) $c7;
        }
    }

    &__contacts {
        margin: auto 0 0 auto;
        max-width: 300px;
        font-size: 15px;
        line-height: 2;
    }

    &__address {
        font-style: normal;
        margin-bottom: 1em;
    }

    &__phone,
    &__email {
        a {
            color: $c1;
        }
    }
}

.footer-nav {
    &__item {
        margin-bottom: 1em;

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__link {
        font-size: 19px;
        line-height: 1.3;
        letter-spacing: 0.45em;
        color: $c1;
        text-transform: uppercase;
        transition: color $duration;
    }
}

@media $desktop {
    .footer-nav {
        &__link {
            &:hover {
                color: $c8;    
            }
        }
    }
}

@media $normal {
    .footer {
        &__col {
            grid-col(4,12);

            &:nth-child(2) {
                grid-col(4,12);                
            }
        }
    }
}

@media $medium {
    .footer {
        &__contacts {
            max-width: 280px;
        }
    }

    .footer-nav {
        &__item {
            margin-bottom: 1.2em;
        }

        &__link {
            font-size: 15px;
        }
    }
}

@media $small {
    .footer {
        padding: 0 20px 20px;

        &__row {
            &:first-child {
                display: grid;
                grid-template-columns: repeat(2, 50%);

                .footer {
                    &__col {
                        width: auto;

                        &:first-child {
                            grid-column-start: 1;
                            grid-column-end: 2;
                            grid-row-start: 2;
                            grid-row-end: 3;
                        }

                        &:nth-child(2) {
                            grid-column-start: 1;
                            grid-column-end: 3;
                            grid-row-start: 1;
                            grid-row-end: 2;
                            margin-bottom: 100px;
                        }            

                        &:last-child {
                            grid-column-start: 2;
                            grid-column-end: 3;
                            grid-row-start: 2;
                            grid-row-end: 3;
                        }
                    }
                }
            }
        }

        &__contacts {
            font-size: 12px;
            line-height: 1.6;
            margin-left: auto;
        }

        &__logo {
            width: 140px;

            .svg-icon {
                width: 100% !important;
                height: auto !important;
            }
        }
    }
}

@media $xsmall {
    .footer {
        &__row {
            &:last-child {
                flex-flow: column nowrap;

                .footer {
                    &__col {
                        grid-col(12,12);
                    }
                }
            }
        }

        &__contacts {
            font-size: 10px;
            line-height: 1.7;
        }

        &__email {
            word-break: break-all;
        }

        &__logo {
            width: 152px;

            .svg-icon {
                width: 100% !important;
                height: auto !important;
            }
        }
    }

    .footer-nav {
        &__item {
            margin-bottom: 16px;
        }

        &__link {
            font-size: 13px;
            letter-spacing: .15em;
        }
    }
}

@media $xxsmall {
    .footer-nav {
        &__link {
            font-size: 12px;
            letter-spacing: .1em;
        }
    }
}